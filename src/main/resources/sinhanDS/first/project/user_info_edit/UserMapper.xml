<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sinhanDS.first.project.user_info_edit.UserMapper">
	
	
	<update id="user_info_edit" parameterType="sinhanDS.first.project.user_info_edit.UserVO">
		UPDATE user SET
			<if test="pwd != ''">
			pwd = #{password}
			</if>
			name = #{name},
			email = #{email},
			phone = #{phone},
			gender = #{gender},
			birth_day = #{birth_day},
			advertisement = #{advertisement}
		WHERE no = #{no}
	</update>
	
	<select id="user_info_detail" parameterType="int" resultType="sinhanDS.first.project.user_info_edit.UserVO">
		SELECT * FROM user WHERE no = #{no}
	</select>
	
	<select id="user_login" parameterType="sinhanDS.first.project.user_info_edit.UserVO" resultType="sinhanDS.first.project.user_info_edit.UserVO">
		SELECT * FROM user WHERE id=#{id} AND password=#{password}
	
	</select>
	
	
	
	
	
	
	
	
	
</mapper>